@model WebApiExampleNamespace.Controllers.IndexVM
@{
    ViewBag.Title = "MDrivenServer";
}

<div style="margin:20px;">
    <img src="~/Content/logo-server.svg" height="200" style=" float: left;margin:20px;" />
